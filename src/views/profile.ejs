<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Cobertura</title>
    <link rel="stylesheet" href="../style.css">
  </head>
  <body>
    <img src='../images/logo.png' alt='Logo Cobertura' />

    <div class='containerCorretor'>
      <img class='avatarCorretor' src='https://pbs.twimg.com/profile_images/972672468031885313/VAemDZAQ.jpg' alt='Ronaldo' />
      <div>
        <h1><%= houses[0].name %> <%= houses[0].surname %></h1>
        <p><%= houses.length %> Imóveis disponível para visitas</p>
        <p class='tag'>CORRETOR PREMIUM</p>
      </div>
    </div>
    
    <h1>Imóveis</h1>
    <div class='containerCard'>
      <% houses.forEach(function(house){ %>
        <div class='card'>
          <h1><%= house.title %></h1>
        </div>
      <% }); %>
    </div>
  </body>
</html>